<!DOCTYPE html>
<html lang="es">

<head>
  
  <!-- Include Head -->
  <%- include('partials/_contentHead') %>
  <!--/ Include Head-->
  
  <title>CandyShop - Detalle Producto</title>
  
</head>

<body>
  
  <!--Include Header-->
  <%- include('partials/header') %>
  
  <!--include NavBar2-->
  <%- include('partials/navBar2') %>
  
  <section class="containerPrimary container">
    <div class="rowPrimary row">
      
      <article class="tituloContainer container col-12">
        <div class="tituloRow row">
          <h2 class="tituloDetalleProducto"><%= productFind.nombre %></h2>
        </div> <!-- ./tituloRow-->
      </article> <!-- ./tituloContainer-->
      
      <article class=" contenedorFotoDetalleProducto col-12 col-md-3 ">
        <img class="fotoDetalleProducto col-12" src="/images/uploads/productDetail/<%= productFind.imgProducto %>" alt="Foto del producto: <%= productFind.nombre %>">   
      </article> <!-- ./contenedorFotoDetalleProducto-->
      
      <article class="productoDetalladoContainer col-12 col-md-7 container ">
        <div class="productoDetalladoRow row">
                    
          <div class="precioContainer container col-12">
            <div class="precioRow row">
              <h4 class="precioh4">Precio: <small class="smallPrecioh4"><%= milesGenerator(productFind.precio) %></small></h4>
            </div> <!-- ./precioRow-->
          </div> <!-- ./precioContainer-->
          
          <div class="cantidadContainer container col-12">
            <div class="cantidadRow row">
              <label for="cantidad" class="cantidadLabel col-12 col-md-3">
                <h5>Cantidad: </h5>
              </label>
              <select name="select" class="cantidadSelect col-12 col-md-3 custom-select" id="cantidad">
                <option selected value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
              </select>
            </div> <!-- ./cantidadRow-->
          </div> <!-- ./cantidadContainer-->

          <div class="totalContainer container col-12">
            <div class="totalRow row">
              <h5 class="totalh5">Total:  <small class="smalltotalh5"><%= milesGenerator(productFind.precio) %></small></h5>
            </div> <!-- ./totalRow-->
          </div> <!-- ./totalContainer-->
          
          <div class="containerButton col-12 container">
            <a href="/sales/purchase"> 
              <button type="button" class="btn btn-success botonAñadirCarrito">Añadir al carrito</button>
            </a>
          </div> <!-- ./containerButton-->
          
        </div> <!-- ./productoDetalladoRow-->
      </article> <!-- ./productoDetalladoContainer-->
      
      <article class="descripcionDetallada col-12">
        <div class="descripcionDetalladaRow row">
          <b class="col-12">Descripcion detallada: </b>
          <p class="col-12"><%= productFind.detalle %></p>
        </div>
      </article> <!-- ./descripcionDetallada -->
      
    </div> <!-- ./rowPrimary -->
  </section> <!-- ./containerPrimary -->

  <!--Include Footer -->
  <%- include('partials/footer') %>
  
  <!-- Include EndBodyScripts -->
  <%- include('partials/_endBodyScripts') %>
  
</body>
</html>