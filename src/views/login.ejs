<!DOCTYPE html>
<html lang="es">
<head>
  <!-- Include Head -->
  <%- include('partials/_contentHead') %>
  
  <title>CandyShop - Login Usuario</title>
</head>
<body>
  <!--include HEADER-->
  <%- include('partials/header') %>
  
<div class="bienvenida"></div>


  <div class="containerLogin">
    <div class="cajaInicioSesion">
      <h1 class="mb-5 tituloInicioSesion">Inicio de Sesión</h1>
      <form action="" method="post">
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" value="<%= (typeof old != 'undefined' && !errors.email) ? old.email : '' %>" name="email" class="form-control" id="email" aria-describedby="emailHelp">
          <small class="text-danger"><%= (typeof errors != 'undefined' && errors.email) ? errors.email.msg : '' %></small>
          <a href="/users/register"><%= (typeof errors != 'undefined' && errors.email && errors.email.msg == 'Este mail no se encuentra registrado!') ? 'Registrate !' : '' %></a>
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" name="password" class="form-control" id="password">
          <small class="text-danger"><%= (typeof errors != 'undefined' && errors.password) ? errors.password.msg : '' %></small>
        </div>
        <div class="form-group form-check">
          <input name="remember" type="checkbox" class="form-check-input" id="remember">
          <label class="form-check-label" for="remember">Mantener sesion iniciada</label>
        </div>
        <!-- <a href="/main">  -->
          <button type="submit" class="btn btn-primary">Ingresar</button>
          <!-- </a> -->
      </form>
      <h6 class="nuevoRegistrate">
        ¿No tenés cuenta?
        <a href="./register">REGISTRATE</a>
      </h6>

      </div>
    </div>
    
    <!--Include footer -->
    <%- include('partials/footer') %>
    
    <!-- Include End Body Scripts -->
    <%- include('partials/_endBodyScripts') %>
  </body>
  </html>