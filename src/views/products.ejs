                        <p></p> <!--Parrafo carrousel img 2-->
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="/images/carrousel/img-03.jpg" class="d-block w-100" alt="imagen3">
                    <div class="carousel-caption d-none d-md-block">
                        <h5></h5> <!--Titulo carrousel img 3-->
                        <p></p> <!--Parrafo carrousel img 3-->
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </section> <!-- </ carrousell > -->
    
    
    <!-- MUESTRA DE LOS PRODUCTOS -->
    <div class="products-wrapper container">
        <div class="row">
            <div class="col-12">
                <h1 class="titularProducts"> Todos nuestros productos</h1>
            </div>
            
            <% for (product of productosParseados) { 
                let getDiscountPercentage = discount => (100 - discount) / 100;
                let finalPrice = (product.precio * getDiscountPercentage(product.descuento)).toFixed(0); 
                %>
                <div class="col-12 col-sm-6 col-lg-3">
                    <section class="product-box">
                        <a href="/products/<%= `${product.idProducto}` %>">
                            <div class="product-box_image">
                                <img class="productImage" src="/images/uploads/productDetail/<%= product.imgProducto %>" alt="imagen de producto">
                            </div>
                            <article class="product-box_data">
                                <h2>$<%= milesGenerator (finalPrice) %></h2>
                                <span><%= product.descuento %>% OFF</span>
                                <p><%= product.nombre %></p>
                                <i class="fas fa-truck"></i>
                            </article>
                        </a>
                    </section>
                </div>
                <% } %>
            </div>
        </div>
        
        
        
        
        
        
