<!DOCTYPE html>
<html lang="es">
<head>
    <!-- Include Head -->
    <%- include('partials/_contentHead') %>
    
    
    <title>CandyShop - Todos los productos</title>
</head>
<body>
    <!--include HEADER-->
    <%- include('partials/header') %>
    
    <!--include Nav Bar 2-->
    <%- include('partials/navBar2') %>
    
    <!--include CAROUSEL-->
    <%- include('partials/carousel') %>
    <div class="products-wrapper container">
        <div class="row">
            
            <div class="col-12">
                <h1 class="titularProductsBest">Todos nuestros productos a Modificar</h1>
            </div>
            
            <!-- MUESTRA DE LOS PRODUCTOS -->
            <section class="productosDestacados container">
                <div class="row">
                    <% for (product of productosParseados) { 
                        let getDiscountPercentage = discount => (100 - discount) / 100;
                        let finalPrice = (product.precio * getDiscountPercentage(product.descuento)).toFixed(0); 
                        %>
                        <div class="col-12 col-sm-6 col-lg-3">
                            <article class="elProducto">
                                <a href="/products/<%= `${product.idProducto}` %>"></a>
                                
                                <div class="imagenProducto">
                                    <img src="/images/uploads/productDetail/<%= product.imgProducto %>" alt="imagen de producto <%= product.nombre %>">
                                </div>
                                
                                <div class="infoProducto">
                                    <h6><%= product.nombre %></h6>
                                </div>
                            </a>
                            
                            <a href="/products/edit/<%= `${product.idProducto}` %>">
                                <button type="submit" class="btn btn-warning">Modificar</button>
                            </a>                            
                            
                        </article>
                    </div>
                    <% } %>
                </div>
            </section>
            
        </div>
    </div>
    
    <!--Include footer -->
    <%- include('partials/footer') %>
    
    <!-- Include End Body Scripts -->
    <%- include('partials/_endBodyScripts') %>
</body>
</html>