  <!DOCTYPE html>
  <html lang="es">
  
  <head>
    <!-- Include Head -->
    <%- include('partials/_contentHead') %>
    
    <title>CandyShop - Registro</title>
  </head>
  
  <body>
    <!--include HEADER-->
    <%- include('partials/header') %>
    
    <div class="container ">          
      
      <div class="titulo col-md-12 col-mb-12">
        <h1 class="col-md-12 col-mb- tituloRegistro">REGISTRATE COMO NUEVO USUARIO</h1>
      </div>
      
      <form action="" method="post" enctype="multipart/form-data" class="container row">
        <section class="registro col-12">
          <h5>REGISTRO</h5>
          <div class="container row info-Registro">
            <div class=" container col-12">
              <label for="email">Email</label>
              <input type="email" value="<%= (typeof old != 'undefined' && !errors.email) ? old.email : '' %>" name="email" class="form-control col-md-6 col-mb-8" id="email" aria-describedby="emailHelp">
              <small class="text-danger" id="email"><%= (typeof errors != 'undefined' && errors.email) ? errors.email.msg : '' %></small>
              <a href="/users/login"><%= (typeof errors != 'undefined' && errors.email.msg == 'Este mail ya se encuentra registrado!') ? 'Accede a tu cuenta !' : '' %></a>
            </div>
            
            <div class="container col-12">
              <label for="password">Contraseña</label>
              <input type="password" value="" name="password" class="form-control col-md-6 col-mb-8" id="password">
              <small class="text-danger" id="password"><%= (typeof errors != 'undefined' && errors.password) ? errors.password.msg : '' %></small>
            </div>
        </section>

        <section class="datos col-12">
          <h5>DATOS</h5>
          <div class="container col-12">            
            <label for="name_fantasy">Nombre Empresa</label>
            <input type="text" name="name_fantasy" class="form-control col-md-6 col-mb-8" id="name_fantasy" aria-describedby="emailHelp">      
          </div>

          <div class="province col-12">
            <label for="province" id="province" class="">Provincia</label>
              <select name="province" id="province" class="form-control col-md-6 col-mb-8">
                <option hidden>Selecciona una provincia...</option>
              </select>
          </div>

          <div class="municipality col-12">
            <label for="municipality" id="municipality" class="">Municipio</label>
              <select name="municipality" id="municipality" class="form-control col-md-6 col-mb-8" disabled>
                <option hidden>Selecciona una municipio...</option>
              </select>
          </div>

          <div class=" container col-12">           
            <label for="location"> Localidad </label>
            <input type="text" name="location" class="form-control col-md-6 col-mb-8" id="location" aria-describedby="emailHelp" disabled placeholder="Completa tu localidad...">           
          </div>
          
          <div class="postal_code container col-12">           
            <label for="postal_code"> Codigo Postal </label>
            <input type="text" name="postal_code" class="form-control col-md-6 col-mb-8" id="postal_code" aria-describedby="emailHelp" disabled placeholder="Completa tu codigo postal...">           
          </div>
          
          <div class=" container col-12">           
            <label for="adress"> Direccion </label>
            <input type="text" name="adress" class="form-control col-md-6 col-mb-8" id="adress" aria-describedby="emailHelp">           
          </div>
          
          <div class=" container col-12">
            <label for="telephone"> Teléfono</label>
            <input type="text" name="telephone" class="form-control col-md-4 col-mb-6" id="telephone" aria-describedby="emailHelp">          
          </div>
          
          <div class=" container col-12">       
            <label for="business_name"> Razón social </label>
            <input type="text" name="business_name" class="form-control col-md-4 col-mb-6" id="business_name" aria-describedby="emailHelp">            
          </div>
          
          <div class=" container col-12">
            <label for="cuit"> CUIT/DNI</label>
            <input type="text" name="cuit" class="form-control col-md-4 col-mb-6" id="cuit" aria-describedby="emailHelp">
          </div>
          
          <div class="container col-12">              
            <label for="fiscal_condition_id">Condicion fiscal</label>
            <select name="fiscal_condition_id" id="fiscal_condition_id" class="form-control col-md-4 col-mb-6">
              <%for (let i=0; i<fiscalCond.length; i++) { %>
                <option value="<%=fiscalCond[i].id%>">
                  <%= fiscalCond[i].name%>
                </option>
                <% } %>
            </select>
          </div>
        </section>

        <section class="imagen_usuario">
          <h5>IMAGEN USUARIO</h5>
          <div class="col-12 botonCargarImg">
            <label for="imgUser" class="col-12">Cargar Imagen</label>
            <input class="btn btn-succes file col-md-4 col-mb-6" type="file" name="imgUser" id="imgUser">
          </div>
        </section>

          <button type="submit" class="btn btn-success btn-lg btn-block botonForm2 col-md-12 mb-12">Crear usuario    
          </button>
          
                        
        </div>      
      </form>
    </div>
            
      <!--Include footer -->
      <%- include('partials/footer') %>
      <script src="/js/register.js"></script>
      
      <!-- Include End Body Scripts -->
      <%- include('partials/_endBodyScripts') %>
    </body>
    </html>